{
    "name": "Memotion App",
    "dockerComposeFile": "../../docker-compose.yaml",
    "service": "memotion_app",
    "workspaceFolder": "/usr/src",
    "mounts": [],
    "postCreateCommand": "cd backend && poetry install",
    "postStartCommand": "bash backend/.devcontainer/postStartCommand.sh",
    "settings": {
        "python.formatting.provider": "black",
        "python.languageServer": "Pylance",
        "python.formatting.blackPath": "backend/.venv/bin/black",
        "python.linting.flake8Path": "backend/.venv/bin/flake8",
        "python.pythonPath": "backend/.venv/bin/python",
        "python.sortImports.path": "backend/.venv/bin/isort",
        "python.testing.pytestPath": "backend/.venv/bin/pytest",
        "python.venvPath": "backend/.venv",
        "python.testing.cwd": "backend",
    },
    "extensions": [
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "gruntfuggly.todo-tree",
        "littlefoxteam.vscode-python-test-adapter",
        "mhutchie.git-graph",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ryu1kn.partial-diff",
        "streetsidesoftware.code-spell-checker",
    ]
}
